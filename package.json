{
  "name": "aimii.app",
  "version": "0.0.8",
  "description": "Mouse Sensitivity Converter App",
  "main": "dist/browser/index.js",
  "author": {
    "name": "fevish",
    "email": ""
  },
  "license": "MIT",
  "discord": "https://discord.gg/Nj2Xj3W4eY",
  "homepage": "https://aimii.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/fevish/aimii"
  },
  "scripts": {
    "build": "webpack --mode=development && npm run start",
    "build:prod": "webpack --mode=production",
    "build:ow-electron": "ow-electron-builder --publish=never",
    "installer": "node -e \"if (require('fs').existsSync('build')) require('fs').rmSync('build', { recursive: true, force: true })\" && npm run build:prod && ow-electron-builder --publish=never",
    "watch": "concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"wait-on dist/browser/index.js && npm run start\"",
    "watch:main": "webpack --watch --mode=development --config ./webpack.main.config.js",
    "watch:renderer": "webpack --watch --mode=development --config ./webpack.renderer.config.js",
    "start": "ow-electron .",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix"
  },
  "overwolf": {
    "packages": [
      "gep",
      "overlay"
    ]
  },
  "build": {
    "nodeGypRebuild": false,
    "appId": "app.aimii",
    "asar": true,
    "icon": "./dist/icon.ico",
    "overwolf": {
      "disableAdOptimization": false
    },
    "productName": "aimii",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "*.js",
      "*.html",
      "*.exe"
    ],
    "copyright": "Copyright 2025 fevish",
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "win": {
      "extraResources": [
        {
          "from": "public/app.manifest",
          "to": "app.manifest"
        }
      ],
      "extraFiles": [
        {
          "from": "./dist/icon.ico",
          "to": "icon.ico"
        }
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}.${ext}",
      "icon": "./dist/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "aimii",
      "installerIcon": "./dist/icon.ico",
      "uninstallerIcon": "./dist/icon.ico"
    }
  },
  "devDependencies": {
    "@overwolf/ow-electron": "^34.5.7",
    "@overwolf/ow-electron-builder": "latest",
    "@overwolf/ow-electron-packages-types": "^0.0.5",
    "@svgr/webpack": "^8.1.0",
    "@types/jquery": "^3.5.16",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.11.18",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^9.1.2",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^7.1.2",
    "electron": "21.1.0",
    "eslint": "^8.57.1",
    "eslint-config-overwolf-ts": "^0.1.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-junit": "^15.0.0",
    "jest-mock-extended": "^3.0.1",
    "nodemon": "^3.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "reflect-metadata": "^0.1.13",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "typescript": "^4.7.4",
    "typescript-logging": "^2.0.2",
    "wait-on": "^7.0.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "wrapper-webpack-plugin": "^2.1.0"
  }
}
